extends ../layout/index

block content
  div.py-10 
    h1.text-4xl.my-10.font-extrabold.text-center Real
      span.font-normal State
    h2.text-center.text-2xl.font-extrabold= pageHeader

    if errors
      div(class="max-w-md mx-auto my-10")
        each error in errors
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
    if matchPass
      div(class="max-w-md mx-auto my-10")
        each match in matchPass
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=match.msg

    div.mt-8.mx-auto.max-w-md
      div.bg-white.py-8.px-4.shadow
        form.space-y-5(method="POST" action="/auth/register" noValidate)
          input(type="hidden" name="_csrf" value= csrf)
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") your name:
            input#name.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="your name" type="text" name="name" value=user ? user.name : "") 
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email:
            input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="your Email" type="email" name="email" value=user ? user.email: "")
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password:
            input#password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="new password" type="password" name="password")
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repassword") Repet password:
            input#repassword.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="repet password" type="password" name="repassword")
          
          div.flex.items-center.justify-between.px-2
            a.text-gray-500.text-xs(href="/auth/login") Alredy have an account?
            a.text-gray-500.text-xs(href="/auth/forgotPassword") i forget my password 
          
          input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Make Account")